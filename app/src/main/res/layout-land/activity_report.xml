<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_background_color_darker"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.ReportActivity">


    <FrameLayout style="@style/frameLayoutWelcome">

        <TextView
            android:id="@+id/name_results_text_view"
            style="@style/TextAppearance.QuizApp.question_number" />

    </FrameLayout>

    <FrameLayout style="@style/frameLayoutWelcome">

        <TextView
            android:id="@+id/question_text_view_results"
            style="@style/TextAppearance.QuizApp.title"
            android:text="@string/ask_question_result" />

    </FrameLayout>

    <FrameLayout style="@style/frameLayoutWelcome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.QuizApp.result.start"
                android:layout_weight="1"
                android:text="@string/country" />

            <TextView
                style="@style/TextAppearance.QuizApp.result.center"
                android:layout_weight="1"
                android:text="@string/provided_answer" />

            <TextView
                style="@style/TextAppearance.QuizApp.result.end"
                android:layout_weight="1"
                android:text="@string/correct_answer" />

        </LinearLayout>

    </FrameLayout>

    <View style="@style/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/noHeight"
        android:layout_weight="1"
        android:background="@color/welcome_background_color_lighter"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_0"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_0"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_0"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_1"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_1"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_1"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_2"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_2"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_2"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_3"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_3"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_3"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_4"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_4"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_4"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_5"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_5"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_5"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_6"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_6"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_6"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_country_7"
                    style="@style/TextAppearance.QuizApp.result.start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_answer_7"
                    style="@style/TextAppearance.QuizApp.result.center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_view_correct_answer_7"
                    style="@style/TextAppearance.QuizApp.result.end"
                    android:layout_weight="1" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/navigationImage"
                    android:layout_alignParentEnd="true"
                    android:onClick="next"
                    android:src="@drawable/pic_next" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <View style="@style/line" />

    <FrameLayout style="@style/frameLayoutWelcome">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation">

            <TextView
                android:id="@+id/name_text_view_report"
                style="@style/TextAppearance.QuizApp.summary.start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/current_score_view_report"
                style="@style/TextAppearance.QuizApp.summary.end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout style="@style/frameLayoutWelcome">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/restart_button"
                style="@style/Widget.QuizApp.Button.result"
                android:layout_alignParentStart="true"
                android:onClick="restart"
                android:text="@string/restart" />

            <Button
                android:id="@+id/share_button"
                style="@style/Widget.QuizApp.Button.result"
                android:layout_alignParentEnd="true"
                android:onClick="share"
                android:text="@string/share_result" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>


